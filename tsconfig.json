{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "controllers/*": [ "./src/controllers/*" ],
      "models/*": [ "./src/models/*" ],
      "helpers/*": [ "./src/helpers/*" ],
      "components/*": [ "./src/components/*" ],
      "routes/*": [ "./src/routes/*" ],
      "services/*": [ "./src/services/*" ],
      "store/*": [ "./src/store/*" ]
    },
    "target": "ESNext",
    "types": ["vite/client"]
  },

  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}
